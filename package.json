    "vite": "^6.2.5"
  },
  "dependencies": {
    "@clerk/themes": "^2.2.30",
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.40.0",
    "svelte-clerk": "^0.11.0",
    "uuid": "^11.1.0"
  }
